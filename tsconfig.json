{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["lib/**/*.ts", "__tests__/**/*.ts", "jest.config.ts"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
