{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    // "declaration": true,
    // "declarationDir": "types",
    "typeRoots": ["./node_modules/@types", "./lib/types"],
    "types": ["node", "jest"]
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["__tests__/**/*.ts"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
