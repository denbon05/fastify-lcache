{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["lib/**/*.ts", "__tests__/**/*.ts"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
