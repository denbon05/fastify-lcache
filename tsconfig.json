{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "__tests__/**/*.ts"
  ],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}